# API Keys (optional but recommended for better access)
PUBMED_API_KEY=your_pubmed_api_key_here
NCBI_EMAIL=your_email@example.com

# Google Scholar (if using unofficial API)
GOOGLE_SCHOLAR_API_KEY=your_google_scholar_key

# OpenAI or other LLM API (for AI analysis features)
OPENAI_API_KEY=your_openai_key
ANTHROPIC_API_KEY=your_anthropic_key

# Database configuration
DATABASE_PATH=./data/literature.db

# Cache settings
CACHE_ENABLED=true
