{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "camera": {
            "type": "string"
        },
        "output_file_path": {
            "type": "string"
        },
        "output_file_name": {
            "type": "string"
        },
        "output_file_format": {
            "enum": [
                ".avi",
                ".bmp",
                ".cin",
                ".eps",
                ".exr",
                ".hdr",
                ".jpg",
                ".png",
                ".rla",
                ".rpf",
                ".tga",
                ".tif",
                ".dds",
                ".cxr",
                ".vrimg"
            ]
        },
        "state_set": {
            "type": "string"
        },
        "renderer": {
            "oneOf": [
                {
                    "type": "string",
                    "pattern": "^V_Ray.*$"
                },
                {
                    "enum": [
                        "Default_Scanline_Renderer",
                        "ART_Renderer",
                        "Corona",
                        "Redshift_Renderer"
                    ]
                }
            ]
        },
        "scene_file": {
            "type": "string"
        },
        "strict_error_checking": {
            "type": "boolean"
        },
        "enabled_modify_render_elements": {
            "type": "string",
            "enum": [
                "true",
                "false"
            ],
            "description": "Enable or disable modification of render elements settings"
        },
        "render_elements": {
            "type": "string",
            "enum": [
                "true",
                "false"
            ],
            "description": "Enable or disable render elements output"
        },
        "render_elements_update_paths": {
            "type": "string",
            "enum": [
                "true",
                "false"
            ],
            "description": "Update render element paths automatically"
        },
        "render_elements_include_name_in_path": {
            "type": "string",
            "enum": [
                "true",
                "false"
            ],
            "description": "Include render element name in output path"
        },
        "render_elements_include_type_in_path": {
            "type": "string",
            "enum": [
                "true",
                "false"
            ],
            "description": "Include render element type in output path"
        },
        "render_elements_include_name_in_filename": {
            "type": "string",
            "enum": [
                "true",
                "false"
            ],
            "description": "Include render element name in output filename"
        },
        "render_elements_include_type_in_filename": {
            "type": "string",
            "enum": [
                "true",
                "false"
            ],
            "description": "Include render element type in output filename"
        },
        "vray_render_elements_vfb_control": {
            "type": "string",
            "enum": [
                "true",
                "false"
            ],
            "description": "Control V-Ray VFB settings for render elements"
        },
        "vray_split_buffer_support": {
            "type": "string",
            "enum": [
                "true",
                "false"
            ],
            "description": "Enable V-Ray split buffer support for render elements"
        },
        "ignore_render_elements_by_name": {
            "type": "string",
            "description": "Comma-separated list of render element names to ignore during rendering"
        }
    },
    "required": [
        "renderer",
        "scene_file"
    ]
}