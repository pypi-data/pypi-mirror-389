
#include <iostream>
#include "forward.hpp"
{%- for name in inputs_name %}
#include "data/{{ name }}.h"
{%- endfor %}
{%- if labels %}
#include "data/labels.h"
{%- endif %}

{%- set printf_formats = {
    "double": "%lf",
    "float": "%f",
    "int8_t": "%hhd",
    "int16_t": "%hd",
    "int32_t": "%d",
    "int64_t": "%ld",
    "uint8_t": "%hhu",
    "uint16_t": "%hu",
    "uint32_t": "%u",
    "uint64_t": "%lu"
} %}

int main()
{
    // Initialize the output arrays
    {%- for o in range(outputs_name | length) %}
    {{ outputs_dtype[o] }}* {{ outputs_name[o] }} = nullptr;
    {% endfor %}

    // Call the forward function
    {{ func_name }}({{ inputs_name|join(", ") }}{% if inputs_name %}, {% endif %}&{{ outputs_name|join(", &") }});

    // Print the results
    {%- if labels %}
    {%- for o in range(outputs_name | length) %}
    int prediction{{ o }} = 0;
    {{ outputs_dtype[o] }} confidence{{ o }} = {{ outputs_name[o] }}[0];

    for (int o = 0; o < {{ outputs_size[0] }}; ++o) {
        if ({{ outputs_name[o] }}[o] > confidence{{ o }}) {
            prediction{{ o }} = o;
            confidence{{ o }} = {{ outputs_name[o] }}[o];
        }
    }

    printf("Prediction out#{{ o }}: %d ({{ printf_formats[outputs_dtype[o]] }})\n", prediction{{ o }}, confidence{{ o }});
    printf("Label out#{{ o }}: %d\n", labels[{{ o }}]);

    {% endfor %}
    {%- else %}
    {%- for o in range(outputs_name | length) %}

    printf("{{ outputs_name[o] }}:\n");
    for (int o = 0; o < {{ outputs_size[o] }}; ++o) {
        printf("{{ printf_formats[outputs_dtype[o]] }} ", {{ outputs_name[o] }}[o]);
    }
    printf("\n");

    {%- endfor %}
    {%- endif %}
    return 0;
}
