<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="server_config_environment_form_view" model="ir.ui.view">
        <field
            name="name"
        >server_config_environment.server_config_environment_form_view</field>
        <field name="model">server.config.environment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <field name="is_active" invisible="1" />
                    <widget
                        name="web_ribbon"
                        title="Active"
                        bg_color="bg-success"
                        attrs="{'invisible': [('is_active', '=', False)]}"
                    />
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                        <group>
                            <field name="description" />
                            <field name="key" />
                            <field name="default" widget="boolean_toggle" />
                        </group>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="server_config_environment_tree_view" model="ir.ui.view">
        <field
            name="name"
        >server_config_environment.server_config_environment_tree_view</field>
        <field name="model">server.config.environment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="key" />
                <field name="description" />
                <field name="default" />
                <field name="is_active" />
            </tree>
        </field>
    </record>

    <record id="server_config_environment_search_view" model="ir.ui.view">
        <field
            name="name"
        >server_config_environment.server_config_environment_search_view</field>
        <field name="model">server.config.environment</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="key" />
                <field name="description" />
            </search>
        </field>
    </record>

    <record id="action_server_config_environment_view" model="ir.actions.act_window">
        <field name="name">Config Environments</field>
        <field name="res_model">server.config.environment</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="server_config_environment_search_view" />
    </record>

    <menuitem
        id="server_config_environment.menu_server_config_environment"
        name="Config Environments"
        parent="base.menu_ir_property"
        action="server_config_environment.action_server_config_environment_view"
        sequence="100"
    />

</odoo>
