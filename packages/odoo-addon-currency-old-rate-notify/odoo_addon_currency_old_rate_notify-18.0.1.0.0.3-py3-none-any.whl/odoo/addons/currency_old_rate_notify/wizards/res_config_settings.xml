<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <block name="main_currency_setting_container" position="inside">
                <setting
                    id="old_rate_notify"
                    string="Warn when currency rates are too old"
                >
                    <div class="content-group">
                        <div class="row mt16">
                            <label
                                for="currency_old_rate_notify_days"
                                class="col-lg-8 o_light_label oe_inline"
                            />
                            <field
                                name="currency_old_rate_notify_days"
                                class="col-lg-1 oe_inline"
                            />
                            <span class="o_light_label oe_inline">days</span>
                        </div>
                    </div>
                </setting>
            </block>
        </field>
    </record>
</odoo>
