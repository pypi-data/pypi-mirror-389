# Include documentation and metadata files
include README.md
include LICENSE
include CONTRIBUTING.md
include IMPROVEMENTS.md
include ISSUE_STATUS.md
include GITHUB_ISSUES.md
include requirements.txt

# Exclude test files and development artifacts
exclude .gitignore
exclude .gitattributes
recursive-exclude tests *
recursive-exclude demos *
recursive-exclude .github *
recursive-exclude docs *

# Exclude Python cache and build artifacts
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
