from py_persian_tts import PersianTTS, list_voices
import asyncio

async def main():
    tts = PersianTTS(default_voice="man1")
    
    # ููุงุด ุดุฎุตุชโูุง
    print("ุดุฎุตุชโูุง:", list_voices())
    
    # ุชุจุฏู ูุชู ุจู ุตุฏุง (ูุณุฎู async)
