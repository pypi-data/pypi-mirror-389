"""
Semantic Layer Service - MCP Server
{{ project_name }} - {{ domain }} Domain
"""

import os
import logging

# Configure logging
logging.basicConfig(level=logging.INFO)
logger = logging.getLogger(__name__)

# Import MCP server
from layer.mcp_server.main import serve

if __name__ == "__main__":
    # Configuration
    HOST = os.getenv("SEMANTIC_LAYER_HOST", "0.0.0.0")
    PORT = int(os.getenv("SEMANTIC_LAYER_PORT", "10100"))
    TRANSPORT = os.getenv("SEMANTIC_LAYER_TRANSPORT", "sse")
    
    logger.info(f"Starting Semantic Layer MCP Server on {HOST}:{PORT} with transport {TRANSPORT}")
    serve(HOST, PORT, TRANSPORT)